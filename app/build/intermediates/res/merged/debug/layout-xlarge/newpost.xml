<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:background="#42cfff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New ToggleButton"
                android:id="@+id/driverToggle"
                android:layout_gravity="center_horizontal"
                android:onClick="setDriver"
                android:textOff="Rider"
                android:textOn="Driver"
                android:textSize="18sp"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name_id"
                android:hint="Name"
                android:ems="10"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/destFrom_id"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:hint="From:  Destination"
                android:paddingTop="30dp"
                android:paddingBottom="30dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/destTo_id"
                android:hint="To:  Destination"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:ems="10" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:hint="Phone #"
                android:ems="10"
                android:id="@+id/phone_id"
                android:layout_gravity="center_horizontal"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/description_id"
                android:hint="Description"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />

            <TimePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timePicker" />

            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/datePicker" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:id="@+id/submit_id"
                android:padding="15dp"/>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>

