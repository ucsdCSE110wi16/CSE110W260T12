<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.lasergiraffe.rideshare.OpenedPostActivity"

    android:orientation="vertical"
    android:id="@+id/openedpostbg_id">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Title"
                android:id="@+id/titleText_id"
                android:textSize="40sp"
                android:textAlignment="center"
                android:textColor="#570000"
                android:layout_marginTop="60dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Name"
                android:id="@+id/nameText_id"
                android:textSize="30sp"
                android:textAlignment="textStart"
                android:layout_marginLeft="15dp"
                android:textColor="#000000"
                android:layout_marginTop="25dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Phone #"
                android:id="@+id/phoneText_id"
                android:textSize="25sp"
                android:textAlignment="textStart"
                android:layout_marginLeft="25dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Driver"
                android:id="@+id/driverText_id"
                android:textSize="25sp"
                android:textColor="#ffea00"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/departSched"
                android:id="@+id/departSched_id"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="#302f2f" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="Time/Date"
                android:id="@+id/timeDateText_id"
                android:textSize="50dp"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Seats Available"
                android:id="@+id/numSeats_id"
                android:textSize="35sp"
                android:textAlignment="textStart"
                android:layout_marginLeft="15dp"
                android:textColor="#d60007" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:text="Price"
                android:id="@+id/priceText_id"
                android:textSize="35sp"
                android:textAlignment="textStart"
                android:textColor="#23bf20"
                android:layout_marginLeft="15dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView3"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Details"
                    android:id="@+id/detailsText_id"
                    android:textSize="30dp"
                    android:textAlignment="textStart" />
            </ScrollView>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JOIN GROUP"
                android:id="@+id/join_group"
                android:layout_gravity="center_horizontal"
                android:height="100dp"
                android:width="150dp"
                android:layout_marginTop="100dp"
                android:textSize="25dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete Post"
                android:id="@+id/deletePost_id"
                android:layout_gravity="bottom|left"
                android:layout_marginTop="50dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
    <!--android:id="@+id/"-->

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

