<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.lasergiraffe.rideshare.OpenedPostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/openedpostbg_id"
        >

        <TextView
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:id="@+id/titleText_id"
            android:textSize="40sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:singleLine="false" />


        <TableLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="*"
            android:stretchColumns="1,2">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorText"
                    android:lines="2"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:id="@+id/nameText_id"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:layout_marginStart="20dp"
                    android:lines="2"
                    />
            </TableRow>

            <View android:layout_width="match_parent"
                android:background="@color/colorPrimaryDark"
                android:layout_height="2dp"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone #"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorText2"
                    android:lines="2"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone #"
                    android:id="@+id/phoneText_id"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:layout_marginStart="20dp"
                    android:lines="2"/>
            </TableRow>



            <View android:layout_width="match_parent"
                android:background="@color/colorPrimaryDark"
                android:layout_height="2dp"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >
                <TextView
                    android:maxWidth = "100dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/departSched"
                    android:textSize="20dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorText"
                    android:lines="2"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/departSched"
                    android:id="@+id/departSched_id"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:layout_marginStart="20dp"
                    android:lines="2"/>
            </TableRow>

            <View android:layout_width="match_parent"
                android:background="@color/colorPrimaryDark"
                android:layout_height="2dp"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time/Date"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorText2"
                    android:lines="2"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time/Date"
                    android:id="@+id/timeDateText_id"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:layout_marginStart="20dp"
                    android:lines="2"/>
            </TableRow>

            <View android:layout_width="match_parent"
                android:background="@color/colorPrimaryDark"
                android:layout_height="2dp"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Seats\nAvailable"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:lines="2"
                    android:textStyle="bold"
                    android:textColor="@color/colorText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Seats\nAvailable"
                    android:id="@+id/numSeats_id"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:layout_marginStart="20dp"
                    android:lines="2"/>
            </TableRow>

            <View android:layout_width="match_parent"
                android:background="@color/colorPrimaryDark"
                android:layout_height="2dp"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorText2"
                    android:lines="2"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:id="@+id/priceText_id"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:layout_marginStart="20dp"
                    android:lines="2"/>
            </TableRow>

            <View android:layout_width="match_parent"
                android:background="@color/colorPrimaryDark"
                android:layout_height="2dp"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Details"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:lines="2"
                    android:textColor="@color/colorText"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Details"
                    android:id="@+id/detailsText_id"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:layout_marginStart="20dp"
                    android:lines="2"/>
            </TableRow>
            <View android:layout_width="match_parent"
                android:background="@color/colorPrimaryDark"
                android:layout_height="2dp"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"

                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ff5c5c"
                    android:text="Driver"
                    android:id="@+id/driverText_id"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:lines="2"
                    android:layout_span="2"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JOIN GROUP"
                android:id="@+id/join_group"
                android:textSize="20dp"
                android:theme="@style/MyButton"
                android:elevation="8dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete Post"
                android:id="@+id/deletePost_id"
                android:textSize="20dp"
                android:theme="@style/MyButton"
                android:elevation="8dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

    <!--android:id="@+id/"-->

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

